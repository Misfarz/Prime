<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard â€“ Prime.</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
      body {
        font-family: 'Inter', sans-serif;
      }
      .sidebar-link.active {
        background-color: #f3f4f6;
        border-right: 3px solid #000;
      }
      .sidebar-link:hover:not(.active) {
        background-color: #f9fafb;
      }
    </style>
  </head>
  <body class="bg-gray-50 text-gray-800 flex flex-col min-h-screen">
    <!-- Main Layout -->
    <div class="flex flex-1">
      <%- include("../../views/partials/admin/_sidebar") %>

      <!-- Main Content Area -->
      <div class="flex-1 flex flex-col">
        <!-- Header -->
        <%- include("../../views/partials/admin/_header") %>
        <!-- Dashboard Content -->
        <main class="flex-1 p-6 bg-gray-50">
          <!-- Stats Cards -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
            <div class="bg-white p-4 rounded border border-gray-100 shadow-sm">
              <div class="flex justify-between">
                <div>
                  <p class="text-xs text-gray-500">Total Revenue</p>
                  <h3 class="text-xl font-semibold">$24,780</h3>
                </div>
                <div class="w-10 h-10 rounded bg-blue-50 flex items-center justify-center">
                  <i class="fas fa-dollar-sign text-blue-500"></i>
                </div>
              </div>
              <p class="text-xs text-green-500 mt-2"><i class="fas fa-arrow-up mr-1"></i> 12% from last month</p>
            </div>

            <div class="bg-white p-4 rounded border border-gray-100 shadow-sm">
              <div class="flex justify-between">
                <div>
                  <p class="text-xs text-gray-500">Total Orders</p>
                  <h3 class="text-xl font-semibold">1,245</h3>
                </div>
                <div class="w-10 h-10 rounded bg-purple-50 flex items-center justify-center">
                  <i class="fas fa-shopping-bag text-purple-500"></i>
                </div>
              </div>
              <p class="text-xs text-green-500 mt-2"><i class="fas fa-arrow-up mr-1"></i> 8% from last month</p>
            </div>

            <div class="bg-white p-4 rounded border border-gray-100 shadow-sm">
              <div class="flex justify-between">
                <div>
                  <p class="text-xs text-gray-500">Total Customers</p>
                  <h3 class="text-xl font-semibold">845</h3>
                </div>
                <div class="w-10 h-10 rounded bg-green-50 flex items-center justify-center">
                  <i class="fas fa-users text-green-500"></i>
                </div>
              </div>
              <p class="text-xs text-green-500 mt-2"><i class="fas fa-arrow-up mr-1"></i> 5% from last month</p>
            </div>

            <div class="bg-white p-4 rounded border border-gray-100 shadow-sm">
              <div class="flex justify-between">
                <div>
                  <p class="text-xs text-gray-500">Products</p>
                  <h3 class="text-xl font-semibold">312</h3>
                </div>
                <div class="w-10 h-10 rounded bg-yellow-50 flex items-center justify-center">
                  <i class="fas fa-box-open text-yellow-500"></i>
                </div>
              </div>
              <p class="text-xs text-red-500 mt-2"><i class="fas fa-arrow-down mr-1"></i> 2% from last month</p>
            </div>
          </div>

          <!-- Recent Orders -->
          <div class="bg-white p-4 rounded border border-gray-100 shadow-sm mb-6">
            <div class="flex justify-between items-center mb-4">
              <h2 class="text-sm font-semibold">Recent Orders</h2>
              <a href="orders.html" class="text-xs text-gray-500 hover:underline">View All</a>
            </div>
            <div class="overflow-x-auto">
              <table class="min-w-full text-xs">
                <thead>
                  <tr class="border-b border-gray-100">
                    <th class="text-left py-2">Order ID</th>
                    <th class="text-left py-2">Customer</th>
                    <th class="text-left py-2">Date</th>
                    <th class="text-left py-2">Amount</th>
                    <th class="text-left py-2">Status</th>
                    <th class="text-left py-2">Action</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                  <tr>
                    <td class="py-3">#ORD-0001</td>
                    <td class="py-3">John Doe</td>
                    <td class="py-3">May 12, 2025</td>
                    <td class="py-3">$125.00</td>
                    <td class="py-3"><span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Delivered</span></td>
                    <td class="py-3"><a href="#" class="text-blue-500 hover:underline">View</a></td>
                  </tr>
                  <tr>
                    <td class="py-3">#ORD-0002</td>
                    <td class="py-3">Jane Smith</td>
                    <td class="py-3">May 11, 2025</td>
                    <td class="py-3">$89.50</td>
                    <td class="py-3"><span class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded-full text-xs">Processing</span></td>
                    <td class="py-3"><a href="#" class="text-blue-500 hover:underline">View</a></td>
                  </tr>
                  <tr>
                    <td class="py-3">#ORD-0003</td>
                    <td class="py-3">Robert Johnson</td>
                    <td class="py-3">May 10, 2025</td>
                    <td class="py-3">$245.75</td>
                    <td class="py-3"><span class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs">Shipped</span></td>
                    <td class="py-3"><a href="#" class="text-blue-500 hover:underline">View</a></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <!-- Two Column Layout -->
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- Top Products -->
            <div class="bg-white p-4 rounded border border-gray-100 shadow-sm">
              <div class="flex justify-between items-center mb-4">
                <h2 class="text-sm font-semibold">Top Products</h2>
                <a href="products.html" class="text-xs text-gray-500 hover:underline">View All</a>
              </div>
              <div class="space-y-4">
                <div class="flex items-center">
                  <div class="w-10 h-10 rounded bg-gray-100 mr-3"></div>
                  <div class="flex-1">
                    <p class="text-xs font-medium">Premium Headphones</p>
                    <p class="text-xs text-gray-500">Electronics</p>
                  </div>
                  <div class="text-xs font-medium">$199.99</div>
                </div>
                <div class="flex items-center">
                  <div class="w-10 h-10 rounded bg-gray-100 mr-3"></div>
                  <div class="flex-1">
                    <p class="text-xs font-medium">Leather Wallet</p>
                    <p class="text-xs text-gray-500">Accessories</p>
                  </div>
                  <div class="text-xs font-medium">$49.99</div>
                </div>
                <div class="flex items-center">
                  <div class="w-10 h-10 rounded bg-gray-100 mr-3"></div>
                  <div class="flex-1">
                    <p class="text-xs font-medium">Wireless Charger</p>
                    <p class="text-xs text-gray-500">Electronics</p>
                  </div>
                  <div class="text-xs font-medium">$29.99</div>
                </div>
              </div>
            </div>

            <!-- Recent Activity -->
            <div class="bg-white p-4 rounded border border-gray-100 shadow-sm">
              <div class="flex justify-between items-center mb-4">
                <h2 class="text-sm font-semibold">Recent Activity</h2>
                <a href="#" class="text-xs text-gray-500 hover:underline">View All</a>
              </div>
              <div class="space-y-3">
                <div class="flex items-start">
                  <div class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center mr-3 mt-1">
                    <i class="fas fa-user text-gray-500 text-xs"></i>
                  </div>
                  <div>
                    <p class="text-xs"><span class="font-medium">John Doe</span> placed a new order <span class="font-medium">#ORD-0004</span></p>
                    <p class="text-xs text-gray-500">2 hours ago</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <div class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center mr-3 mt-1">
                    <i class="fas fa-box-open text-gray-500 text-xs"></i>
                  </div>
                  <div>
                    <p class="text-xs">New product <span class="font-medium">"Wireless Earbuds"</span> was added</p>
                    <p class="text-xs text-gray-500">5 hours ago</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <div class="w-8 h-8 rounded-full bg-gray-100 flex items-center justify-center mr-3 mt-1">
                    <i class="fas fa-tags text-gray-500 text-xs"></i>
                  </div>
                  <div>
                    <p class="text-xs">New brand <span class="font-medium">"AudioPro"</span> was added</p>
                    <p class="text-xs text-gray-500">1 day ago</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- Mobile Bottom Navigation -->
    <nav class="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 flex justify-around py-2">
      <a href="dashboard.html" class="flex flex-col items-center text-xs p-2 text-black">
        <i class="fas fa-tachometer-alt mb-1"></i>
        <span>Dashboard</span>
      </a>
      <a href="products.html" class="flex flex-col items-center text-xs p-2 text-gray-500">
        <i class="fas fa-box-open mb-1"></i>
        <span>Products</span>
      </a>
      <a href="orders.html" class="flex flex-col items-center text-xs p-2 text-gray-500">
        <i class="fas fa-shopping-bag mb-1"></i>
        <span>Orders</span>
      </a>
      <a href="#" class="flex flex-col items-center text-xs p-2 text-gray-500">
        <i class="fas fa-cog mb-1"></i>
        <span>More</span>
      </a>
    </nav>

    <script>
      // Sidebar active link functionality
      document.addEventListener('DOMContentLoaded', function() {
        const links = document.querySelectorAll('.sidebar-link');
        links.forEach(link => {
          link.addEventListener('click', function(e) {
            links.forEach(l => l.classList.remove('active'));
            this.classList.add('active');
          });
        });
      });
    </script>
  </body>
</html>