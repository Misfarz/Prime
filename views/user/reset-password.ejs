<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Reset Password - Prime</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="h-screen w-screen flex bg-black text-white">

  <div class="hidden md:block w-1/2 h-full bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1064&q=80');">
    <div class="h-full w-full bg-black bg-opacity-40 flex items-start p-10">
      <h1 class="text-white text-4xl font-bold">Prime.</h1>
    </div>
  </div>

  <div class="w-full md:w-1/2 h-full flex items-center justify-center p-6">
    <form class="w-full max-w-md space-y-6" action="/reset-password" method="post">
      <div>
        <h2 class="text-3xl font-bold mb-2">Reset Password</h2>
        <% if (error && error.length > 0) { %>
          <div class="text-red-500 px-4 py-3 relative mt-4 rounded bg-red-900 bg-opacity-30">
            <%= error %>
          </div>
        <% } %>
        <p class="text-sm text-gray-400">Enter a new password for your account</p>
      </div>

      <input type="hidden" name="email" value="<%= email %>" />
      <input type="hidden" name="token" value="<%= token %>" />

      <div class="space-y-2">
        <label class="text-sm font-medium text-gray-400">New Password <span class="text-red-500">*</span></label>
        <input 
          type="password" 
          placeholder="Enter new password" 
          name="newPassword" 
          id="newPassword" 
          class="w-full p-3 rounded bg-gray-900 border border-gray-700 focus:outline-none focus:ring-1 focus:ring-gray-500" 
          required 
        />
        <p class="text-xs text-gray-500 mt-1">Must be at least 8 characters with uppercase, lowercase, number and special character</p>
      </div>

      <div class="space-y-2">
        <label class="text-sm font-medium text-gray-400">Confirm Password <span class="text-red-500">*</span></label>
        <input 
          type="password" 
          placeholder="Confirm your password" 
          name="confirmPassword" 
          id="confirmPassword" 
          class="w-full p-3 rounded bg-gray-900 border border-gray-700 focus:outline-none focus:ring-1 focus:ring-gray-500" 
          required 
        />
      </div>

      <button type="submit" class="w-full bg-blue-600 text-white font-medium py-3 rounded hover:bg-blue-700 transition-colors">
        Reset Password
      </button>

      <div class="text-center text-sm text-gray-400 mt-4">
        Remember your password? <a href="/login" class="text-blue-500 hover:text-blue-400">Sign in</a>
      </div>
    </form>
  </div>

  <script>
    document.querySelector('form').addEventListener('submit', function(e) {
      const newPassword = document.getElementById('newPassword').value;
      const confirmPassword = document.getElementById('confirmPassword').value;
      
      const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
      if (!passwordRegex.test(newPassword)) {
        e.preventDefault();
        alert('Password must be at least 8 characters with uppercase, lowercase, number, and special character');
        return;
      }
      
      if (newPassword !== confirmPassword) {
        e.preventDefault();
        alert('Passwords do not match');
        return;
      }
    });
  </script>
</body>
</html>